<div class="panel panel-default">
  <div class="panel-heading">Group Stage</div>
  <div class="panel-body">
    <% @groups.each do |group| %>
      <% next if group.standings.count == 0 %>
      <div class="col-xs-6 col-sm-3">
        <table class="table table-condensed table-bordered">
          <thead>
            <!-- <tr>
               <th colspan="2" align="center"><strong>Group <%= group.name %></th>
            </tr> -->
            <tr>
              <th data-sort="string">Team <%= group.name %></th>
              <th data-sort="int" data-sort-default="asc">Pts</th>
            </tr>
           
          </thead>
            <% group.standings.sorted.each do |standing| %>
            <tbody>
              <tr>
                
                <td><%= link_to standing.nation.name, nation_path(standing.nation.id)  %></td>

                <td><%= standing.point %></td>
              </tr>
            </tbody>
            <% end %>
        </table>      
      </div>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Listing matches</div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @matches.each do |match| %>
            <% if match.date == Date.today %>
            <tr class="success">
            <% elsif match.date < Date.today %>
            <tr class="danger">
            <% end %>
              <td><%= match.date %></td>
              <td><%= link_to "#{match.home_team.name} VS #{match.away_team.name}", match_path(match), 'data-no-turbolink' => true  %> </td>
              <td><%= "#{match.score_home}:#{match.score_away}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
